{{extend 'layout.html'}}
<hr/>
<h1>This is the homework</h1>
<table>
    <tr>
        <td colspan='2'>
            <div class='person'> {{=T('Tweepy, user: j3nnn1!!')}}</div>
        </td>
    </tr>
    <tr>
        <td>
            <img src="{{=userinfo['image']}}" width='50px' heigth='50px'/>
        </td>
        <td>
           <strong>{{=userinfo['name']}}: </strong>{{=userinfo['status']}} 
        </td>
    </tr>
    <tr>
        <td colspan='2'>
            <div class='timelinepublic'> {{=T('Tweepy, Public Time Line!!')}}</div>
        </td>
    </tr>
{{for x in public:}}
    <tr>
        <td>
            <img src="{{=public[x]['url_pic']}}" width='50px' heigth='50px'/>
        </td>
        <td>
           <strong>{{=T(public[x]['username'])}}
           ({{=public[x]['name']}}): </strong>{{=T(public[x]['status'])}}
        </td>
    </tr>
{{pass}}     
</table>
